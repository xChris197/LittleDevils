using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class SCR_Letter_Respawn : MonoBehaviour
{

    public GameObject respawnPoint;
    public GameObject Object;

    void OnCollisionEnter(Collision other)
    {

        if (other.collider.CompareTag("Letter") || other.collider.CompareTag("Holder") || other.collider.CompareTag("Untagged"))
        {

            Object = other.collider.gameObject;
            Object.transform.position = (respawnPoint.transform.position);

        }

    }

}
